{
    "spec": {
      "template": {
        "spec": {
          "containers": [
            {
              "name": "proxy",
              "ports": [
                {
                  "containerPort": 8443,
                  "hostPort": 443,
                  "name": "proxy-ssl",
                  "protocol": "TCP"
                }
              ]
            }
          ],
          "nodeSelector": {
            "ingress-ready": "true"
          },
          "tolerations": [
            {
              "key": "node-role.kubernetes.io/control-plane",
              "operator": "Equal",
              "effect": "NoSchedule"
            },
            {
              "key": "node-role.kubernetes.io/master",
              "operator": "Equal",
              "effect": "NoSchedule"
            }
          ]
        }
      }
    }
  }